{{#input}}
	<select 
		class="input input--select-menu {{#isInvalid}}input--invalid{{/isInvalid}} {{class}} {{styleModifier}}" 
		id="{{# id }}{{ id }}{{/ id }}{{^ id }}{{ name }}{{/ id }}" 
		name="{{# name }}{{name}}{{/ name }}{{^ name }}{{id}}{{/ name }}"
		{{#isRequired}}required{{/isRequired}}
		{{#isDisabled}}disabled{{/isDisabled}}
		{{#isMultiSelect}}multiple{{/isMultiSelect}}
		{{#attributes}}{{name}}="{{value}}"{{/attributes}}>
	   	{{# options }}
	        <option value={{value}}>{{label}}</option>
	    {{/ options }}
	</select>
{{/input}}