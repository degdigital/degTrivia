{{# table }}
<table class="table">
    {{# tableCaption }}
        <caption class="table__caption">{{tableCaption}}</caption>
    {{/ tableCaption }}
    <colgroup>
    {{# tableColumns}}
        <col class="table__col {{cssClass}}" />
    {{/ tableColumns}}
    </colgroup>
    <thead class="table__header-row">
        <tr class="table__row">
            {{# tableColumns }}
                <th class="table__heading">
                    {{ heading }}
                </th>
            {{/ tableColumns }}
        </tr>
    </thead>
    {{# tableFooter }}
    <tfoot class="table__footer-row">
        <tr class="table__row">
            {{ # tableColumns }}
                <th class="table__footing"> {{ footing }}</th>
            {{ / tableColumns }}
        </tr>
    </tfoot>
    {{/ tableFooter }}
    <tbody class="table__table-body">
        {{# tableData }}
            <tr class="table__row table__data-row">
                {{# row }}
                    <td class="table__data-cell {{styleModifier}}" {{#heading}}data-heading="{{heading}}"{{/heading}}>{{{ content }}}</td>
                {{/ row }}
            </tr>
        {{/ tableData }}
    </tbody>
</table>
{{/ table }}